{
  "name": "twint",
  "version": "1.0.0",
  "description": "twint desktop app",
  "main": "./dist/main.bundle.js",
  "homepage": "https://twint.io",
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "twint:debug": "electron . --enable-logging --devtools",
    "build": "npm run build:clean && webpack --env.prod --progress --colors",
    "build:clean": "rimraf ./dist",
    "watch": " npm run build:clean && webpack --progress --colors --watch --bail",
    "watch:notif": "webpack --watch --bail --env.notifs",
    "lint": "tslint --project . --format stylish",
    "format": "prettier --config prettier.config.js --write **/*.{ts,js,tsx,jsx,scss}",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -mwl -c.mac.identity=null"
  },
  "author": "Twint Project <francescopoldi@pielco11.ovh>",
  "license": "MIT",
  "dependencies": {
    "chart.js": "^2.7.2",
    "elasticsearch": "^15.1.1",
    "heap": "^0.2.6",
    "leaflet": "^1.3.4",
    "node-notifier": "^5.2.1",
    "react": "^16.6.1",
    "react-chartjs-2": "^2.7.4",
    "react-dom": "^16.6.1",
    "react-force-graph": "^1.17.1",
    "react-leaflet": "^2.1.2",
    "react-redux": "^5.1.1",
    "react-router-dom": "^4.3.1",
    "react-wordcloud": "git+https://github.com/chrisrzhou/react-wordcloud.git",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "sequelize": "^4.41.2",
    "sqlite3": "^4.0.4",
    "wordcloud": "^1.1.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^10.12.3",
    "@types/react": "^16.7.2",
    "@types/react-dom": "^16.0.9",
    "@types/sequelize": "^4.27.30",
    "ajv": "^6.5.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.24.1",
    "css-loader": "^1.0.1",
    "electron": "^3.0.8",
    "electron-builder": "^20.36.2",
    "file-loader": "^2.0.0",
    "fs": "0.0.1-security",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.10.0",
    "prettier": "1.14.3",
    "redux-logger": "^3.0.6",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "svg-inline-loader": "^0.8.0",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.25.1",
    "webpack-build-notifier": "^0.1.30",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "build": {
    "appId": "io.twint",
    "productName": "Twint",
    "compression": "normal",
    "artifactName": "${name}-${os}-v${version}-${arch}.${ext}",
    "directories": {
      "buildResources": "./dist",
      "output": "./build"
    },
    "files": [
      "dist/**/*",
      "img/**/*"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": "dmg",
      "icon": "img/logos/twint.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${name}-setup-${os}-v${version}-${arch}.${ext}"
    },
    "linux": {
      "category": "Graphics",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "executableName": "twint-desktop"
    },
    "win": {
      "target": "nsis",
      "icon": "img/logos/twint.ico"
    }
  }
}
